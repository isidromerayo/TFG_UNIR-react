# Configuración de pnpm para Next.js/React

# Hoist para compatibilidad con Next.js
shamefully-hoist=true

# Auto-instalar peer dependencies
auto-install-peers=true

# Strict peer dependencies
strict-peer-dependencies=false

# Hoist patterns específicos para Next.js y React
public-hoist-pattern[]=*@next*
public-hoist-pattern[]=*@babel*
public-hoist-pattern[]=*react*
public-hoist-pattern[]=*react-dom*
public-hoist-pattern[]=*eslint*
public-hoist-pattern[]=*jest*
public-hoist-pattern[]=*cypress*
public-hoist-pattern[]=*@testing-library*

# Configuración de resolución
resolution-mode=highest

# Lockfile settings
lockfile=true
