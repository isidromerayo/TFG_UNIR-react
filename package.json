{
  "name": "frontend-react",
  "version": "0.2.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "test": "jest --watch",
    "lint": "eslint .",
    "test-headless": "jest --watchAll=false",
    "test-headless-cc": "jest --watchAll=false --coverage",
    "test:coverage": "jest --watchAll=false --coverage --coverageReporters=text --coverageReporters=lcov --coverageReporters=html",
    "test:coverage:ci": "jest --watchAll=false --coverage --coverageReporters=lcov --coverageReporters=json --coverageReporters=text-summary",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "cypress:component": "cypress run --component",
    "cypress:component:open": "cypress open --component",
    "cypress:component:coverage": "CYPRESS_COVERAGE=true cypress run --component && npx nyc report --reporter=lcov --reporter=text-summary",
    "cypress:component:coverage:open": "CYPRESS_COVERAGE=true cypress open --component",
    "cypress:e2e": "cypress run --e2e",
    "cypress:e2e:coverage": "CYPRESS_COVERAGE=true cypress run --e2e",
    "coverage:merge": "mkdir -p coverage/merged && npx lcov-result-merger 'coverage/**/lcov.info' coverage/merged/lcov.info",
    "coverage:verify": "node scripts/verify-coverage.js",
    "test:all": "pnpm test-headless && pnpm cypress:component",
    "test:all:ci": "pnpm test:coverage:ci && pnpm cypress:component",
    "coverage:report": "echo 'Coverage report generated at coverage/lcov-report/index.html'",
    "security": "./scripts/security-check.sh",
    "security:audit": "pnpm audit",
    "security:outdated": "pnpm outdated"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.1.1",
    "@types/node": "25.0.3",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "axios": "^1.12.0",
    "eslint": "9.39.2",
    "eslint-config-next": "^16.1.1",
    "next": "^16.1.1",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-hook-form": "^7.70.0",
    "sweetalert2": "^11.4.8",
    "typescript": "5.9.3",
    "yup": "^1.6.1",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@babel/core": "^7.28.6",
    "@babel/preset-env": "^7.28.6",
    "@babel/preset-react": "^7.27.1",
    "@cypress/code-coverage": "^3.13.4",
    "@cypress/react": "^9.0.1",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@jest/globals": "^30.0.5",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.2",
    "babel-jest": "^30.0.2",
    "babel-plugin-istanbul": "^7.0.1",
    "css-loader": "^7.1.2",
    "cypress": "^15.9.0",
    "file-loader": "^6.2.0",
    "istanbul-lib-coverage": "^3.2.2",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.2",
    "jest-sonar-reporter": "^2.0.0",
    "lcov-result-merger": "^5.0.1",
    "nyc": "^17.1.0",
    "style-loader": "^4.0.0",
    "ts-jest": "^29.4.0"
  },
  "overrides": {
    "brace-expansion": "1.1.12",
    "qs": ">=6.14.1"
  },
  "pnpm": {
    "overrides": {
      "qs": ">=6.14.1",
      "js-yaml": ">=4.1.1"
    }
  }
}
